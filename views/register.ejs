<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/register" method="post">
        <label for="userName">User Name</label>
        <input type="text" id="userName" name="userName" ><br>
        
        <% if(errorCategory.username){ %>
            <% showError(errorCategory.username).forEach(el =>{ %>
                <p style="color: red;"><%= el %></p>
           <% }) %>
        <% } %>
        

        <label for="email">Email</label>
        <input type="email" id="email" name="email" ><br>

        <% if(errorCategory.email){ %>
            <% showError(errorCategory.email).forEach(el =>{ %>
                <p style="color: red;"><%= el %></p>
           <% }) %>
        <% } %>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" ><br>

        <% if(errorCategory.password){ %>
            <% showError(errorCategory.password).forEach(el =>{ %>
                <p style="color: red;"><%= el %></p>
           <% }) %>
        <% } %>

        <button type="submit">Register</button>
    </form>
    <a href="/login">login</a>
</body>
</html>